<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.myapp.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_objects"
            app:destination="@id/objectsFragment" />
        <action
            android:id="@+id/action_home_to_image"
            app:destination="@id/imageFragment" />
        <action
            android:id="@+id/action_home_to_pdf"
            app:destination="@id/pdfViewerActivity" />
        <action
            android:id="@+id/action_home_to_settings"
            app:destination="@id/settingsFragment" />

    </fragment>

    <fragment
        android:id="@+id/objectsFragment"
        android:name="com.example.myapp.ui.objects.ObjectsFragment"
        android:label="Objects"
        tools:layout="@layout/fragment_objects" />

    <fragment
        android:id="@+id/imageFragment"
        android:name="com.example.myapp.ui.image.ImageFragment"
        android:label="Image"
        tools:layout="@layout/fragment_image" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.myapp.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <activity
        android:id="@+id/pdfViewerActivity"
        android:name="com.example.myapp.ui.pdf.PDFViewerActivity"
        android:label="PDF Viewer" />
</navigation>